<%= render "layouts/admins_navbar" %>

<div class="container">
  <div class="card">
    <div class="card-content">
      <div class="card-container">
        <h4 class="center">Edit Candidate</h4>
        <%= simple_form_for @candidate, html: { enctype: "multipart/form-data" } do |f| %>
          <%= render partial: 'layouts/errors', locals: { f: f, model: @candidate} %>

          <div class="row">
            <div class="col s12 m4">
              <%= f.input :name %>
            </div>
            <div class="col s12 m4">
              <%= f.input :last_name %>
            </div>
            <div class="col s12 m4">
              <%= f.input :email, disabled: true %>
            </div>
            <div class="col s12 m4">
              <%= f.input :phone %>
            </div>
            <div class="col s12 m4">
              <%= f.input :linkedin_id %>
            </div>
            <div class="col s12 m4">
              <%= f.input :facebook_id %>
            </div>
            <div class="col s12 m12">
              <%= f.input :address %>
            </div>
          </div>

          <div class="form-actions row margin_bottom--medium">
            <%= f.button :button, "Update candidate", type: "submit", id: "submit-button", class: "create waves waves-effect waves-light" %>
          </div>

        <% end %>
      </div>
    </div>
  </div>
</div>
