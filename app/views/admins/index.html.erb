<%= render "layouts/admins_navbar" %>
<h4 class="center">Admin Menu</h4>
<br>
<div class="container">

  <div class="row">
    <div class="col s6 m3">
      <%= link_to companies_path(), class: "btn module-btn" do %>
        <div class="btn-container">
          <i class="material-icons">assignment_ind</i>
          <h6>Companies</h6>
        </div>
      <% end %>
    </div>

    <div class="col s6 m3">
      <%= link_to vacancies_path(), class: "btn module-btn" do %>
        <div class="btn-container">
          <i class="material-icons blue-text">access_alarm</i>
          <h6>Vacancies</h6>
        </div>
      <% end %>
    </div>

    <div class="col s6 m3">
      <%= link_to candidates_path(), class: "btn module-btn" do %>
        <div class="btn-container">
          <i class="material-icons green-text">account_balance</i>
          <h6>Candidates</h6>
        </div>
      <% end %>
    </div>

    <div class="col s6 m3">
      <%= link_to candidates_admins_path(), class: "btn module-btn" do %>
        <div class="btn-container">
          <i class="material-icons red-text">business_center</i>
          <h6>Admins</h6>
        </div>
      <% end %>
    </div>
  </div>

  <div class="row">
    <div class="col s6 m3">
      <%= link_to new_candidate_path(:candidate), class: "btn module-btn" do %>
        <div class="btn-container">
          <i class="material-icons brown-text">group_add</i>
          <h6>Create Admins</h6>
        </div>
      <% end %>
    </div>

    <div class="col s6 m3">
      <%= link_to applications_path(), class: "btn module-btn" do %>
        <div class="btn-container">
          <i class="material-icons purple-text">info</i>
          <h6>Applications</h6>
        </div>
      <% end %>
    </div>
  </div>
</div>