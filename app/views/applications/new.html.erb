<%= render "layouts/admins_navbar" %>

<div class="container">
  <div class="card">
    <div class="card-content">
      <div class="card-container">
        <h4 class="center">New Application</h4>
        <%= simple_form_for [@vacancy, @application], html: { enctype: "multipart/form-data" } do |f| %>
          <%= f.error_notification %>
          <% if @application.errors.full_messages.any? %>
            <% @application.errors.full_messages.each do |error_message| %>
              <%= " - #{error_message}" %>
              <br>
            <% end %>
          <% end %>
          <br><br>

          <div class="row">
            <div class="col s12 m12">
              <%= f.input :linked_in %>
            </div>
            <div class="col s12 m12">
              <%= f.label :cv, label: "Upload resume" %>
              <%= f.file_field :cv %>
            </div>
          </div>

          <div class="form-actions row margin_bottom--medium">
            <%= f.button :button, "Create application", type: "submit", id: "submit-button", class: "create waves waves-effect waves-light" %>
          </div>

        <% end %>
      </div>
    </div>
  </div>
</div>
