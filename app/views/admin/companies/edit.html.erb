<%= render "layouts/admins_navbar" %>

<div class="container">
  <div class="card">
    <div class="card-content">
      <div class="card-container">
        <h4 class="center">Edit Company</h4>
        <%= simple_form_for [:admin, @company], html: { enctype: "multipart/form-data" } do |f| %>
          <%= render partial: 'layouts/errors', locals: { f: f, model: @company } %>

          <div class="row">
            <div class="col s12 m4">
              <%= f.input :name %>
            </div>
            <div class="col s12 m4">
              <%= f.input :contact_name %>
            </div>
            <div class="col s12 m4">
              <%= f.input :contact_last_name %>
            </div>
            <div class="col s12 m4">
              <%= f.input :contact_phone %>
            </div>
            <div class="col s12 m4">
              <%= f.input :contact_email %>
            </div>
            <div class="col s12 m4">
              <%= f.input :website %>
            </div>
          </div>

          <%= render partial: 'layouts/submit_button', locals: { f: f, button_message: "Update company" } %>
        <% end %>
      </div>
    </div>
  </div>
</div>
