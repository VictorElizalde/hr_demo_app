<%= render "layouts/admins_navbar" %>

<div class="container">
  <div class="card">
    <div class="card-content">
      <div class="card-container">
        <h4 class="center">Edit Admin</h4>
        <%= simple_form_for [:admin, @administrator], url: admin_update_administrator_path, html: { enctype: "multipart/form-data" } do |f| %>
          <%= render partial: 'layouts/errors', locals: { f: f, model: @administrator} %>

          <div class="row">
            <div class="col s12 m4">
              <%= f.input :name %>
            </div>
            <div class="col s12 m4">
              <%= f.input :last_name %>
            </div>
            <div class="col s12 m4">
              <%= f.input :email, disabled: true %>
            </div>
            <div class="col s12 m4">
              <%= f.input :phone %>
            </div>
            <div class="col s12 m4">
              <%= f.input :linkedin_id %>
            </div>
            <div class="col s12 m4">
              <%= f.input :facebook_id %>
            </div>
            <div class="col s12 m12">
              <%= f.input :address %>
            </div>
          </div>

          <%= render partial: 'layouts/submit_button', locals: { f: f, button_message: "Update administrator" } %>
        <% end %>
      </div>
    </div>
  </div>
</div>
